{% set current_path = app.request.get('_route') %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        {% block title %}Admin{% endblock %}
    </title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    {% endblock %}
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body>

<div class="container mt-3">
    <div class="row">
        <aside class="col-md-3">
            <div class="list-group">
                <a href="{{ path('app_admin_dashboard') }}" class="list-group-item list-group-item-action {{ current_path == 'app_admin_dashboard' ? 'active' }}">
                    Dashboard
                </a>
                <a href="{{ path('app_admin_skill_index') }}" class="list-group-item list-group-item-action {{ current_path starts with 'app_admin_skill_' ? 'active' }}">
                    Compétences
                </a>
                <a href="{{ path('app_admin_healthcare_center_index') }}" class="list-group-item list-group-item-action {{ current_path starts with 'app_admin_healthcare_center_' ? 'active' }}">
                    Centres de santé
                </a>
                <a href="{{ path('app_admin_doctor_index') }}" class="list-group-item list-group-item-action {{ current_path starts with 'app_admin_doctor_' ? 'active' }}">
                    Docteurs
                </a>
            </div>
        </aside>
        <main class="col-md-9">
            {% block body %}{% endblock %}
        </main>
    </div>
</div>

</body>
</html>